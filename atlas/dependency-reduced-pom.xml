<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>tally-snapins</artifactId>
    <groupId>tk.jasonho.tally</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>tally-snapins-atlas</artifactId>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.10</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>tk.jasonho.tally</groupId>
      <artifactId>tally-bukkitcore</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>app.ashcon</groupId>
      <artifactId>sportpaper</artifactId>
      <version>1.8.8-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.avicus</groupId>
      <artifactId>atlas-core</artifactId>
      <version>1.8.8-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>LibsDisguises</artifactId>
          <groupId>LibsDisguises</groupId>
        </exclusion>
        <exclusion>
          <artifactId>luckperms-api</artifactId>
          <groupId>me.lucko.luckperms</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jdom2</artifactId>
          <groupId>org.jdom</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.avicus</groupId>
      <artifactId>magma-bukkit</artifactId>
      <version>1.8.8-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.avicus</groupId>
      <artifactId>atlas-competitive-objectives</artifactId>
      <version>1.8.8-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>jdom2</artifactId>
          <groupId>org.jdom</groupId>
        </exclusion>
        <exclusion>
          <artifactId>LibsDisguises</artifactId>
          <groupId>LibsDisguises</groupId>
        </exclusion>
        <exclusion>
          <artifactId>luckperms-api</artifactId>
          <groupId>me.lucko.luckperms</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.avicus</groupId>
      <artifactId>library</artifactId>
      <version>1.8.8-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

